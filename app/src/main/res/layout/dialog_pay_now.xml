<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_round"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确保您的余额充足，扣款失败将严重影响你的个人信用。"
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/SecTextSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="暂不支持信用卡还款服务。"
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/SecTextSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="还款总额："
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/SecTextSize" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="1000.0元"
        android:textColor="@color/text_blue"
        android:textSize="42sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="支付方式："
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/SecTextSize" />

    <RelativeLayout
        android:id="@+id/alipay"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="支付宝支付"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/SecTextSize"
            android:drawableLeft="@mipmap/ic_alipay"
            android:drawablePadding="12dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/select_alipay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/check_contact_sure"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alipay2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="支付宝转账"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/SecTextSize"
            android:drawableLeft="@mipmap/ic_alipay"
            android:drawablePadding="12dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/select_alipay2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/check_contact_sure"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/weixinPay"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="微信支付"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/SecTextSize"
            android:drawableLeft="@mipmap/ic_weixin"
            android:drawablePadding="12dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/select_weixinPay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/check_contact_sure"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="确定"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_red_button"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="取消"
        android:textColor="@color/white"/>

</LinearLayout>