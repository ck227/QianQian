<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_background"
    android:orientation="vertical"
    tools:context="com.ck.fragment.PayLaterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="请选择时间"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/SecTextSize" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/timeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="12dp" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="16dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/trialFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快速信审费用：0.0元"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/interestFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="利息：0.0元"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/accountFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账户管理费用：0.0元"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/serviceFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="服务费：0.0元"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="续期金额："
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/arrivalFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0元"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/ThiTextSize" />

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:text="申请续期"
                android:textColor="@color/white" />


            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="16dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/dayNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="续期天数：0天"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/applyRenewalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="续期申请时间"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="续期状态"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/trialFee2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="快速信审费"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/interestFee2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="利息"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/accountFee2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="账户管理费"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/amountFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="贷款金额"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/serviceFee2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="服务费"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="续期期数："
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize" />

                        <TextView
                            android:id="@+id/renewalNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/ThiTextSize" />

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/cancel"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:text="取消续期"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
