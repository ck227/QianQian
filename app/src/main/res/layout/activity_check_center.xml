<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical"
    tools:context="com.ck.qianqian.CheckCenterActivity">

    <include layout="@layout/base_back_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/check_phone_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_phone_ic"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@mipmap/check_phone"/>

            <TextView
                android:id="@+id/check_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机认证"
                android:textColor="@color/second_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_msg_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_msg_ic"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@mipmap/check_msg"/>

            <TextView
                android:id="@+id/check_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息认证"
                android:textColor="@color/second_text_color"/>

        </LinearLayout>

    </LinearLayout>


    <!--第二行-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/check_id_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_id_ic"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@mipmap/check_id"/>

            <TextView
                android:id="@+id/check_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份认证"
                android:textColor="@color/second_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_card_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_card_ic"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@mipmap/check_card"/>

            <TextView
                android:id="@+id/check_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡认证"
                android:textColor="@color/second_text_color"/>

        </LinearLayout>

    </LinearLayout>


    <!--第三行-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/check_contact_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_contact_ic"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@mipmap/check_contact"/>

            <TextView
                android:id="@+id/check_contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通信认证"
                android:textColor="@color/second_text_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        />

</LinearLayout>