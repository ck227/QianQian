                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人姓名"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/BigTextSize"/>

                <TextView
