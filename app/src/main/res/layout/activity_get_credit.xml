<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ck.qianqian.credit.GetCreditActivity">

    <include layout="@layout/base_back_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="请选择金额"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/SecTextSize"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/amountList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="请选择时间"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/SecTextSize"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/timeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="@color/text_blue"/>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="16dp"
                                                card_view:cardBackgroundColor="@color/white"
                                                card_view:cardCornerRadius="4dp"
                                                card_view:cardElevation="5dp"
                                                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/trialFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快速信审费用：0.0元"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize"/>

                        <TextView
                            android:id="@+id/interestFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="利息：0.0元"
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/accountFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="账户管理费用：0.0元"
                        android:textColor="@color/second_text_color"
                        android:textSize="@dimen/ThiTextSize"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到账金额："
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize"/>

                        <TextView
                            android:id="@+id/arrivalFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0元"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/ThiTextSize"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到期应还："
                            android:textColor="@color/second_text_color"
                            android:textSize="@dimen/ThiTextSize"/>

                        <TextView
                            android:id="@+id/amountFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0元"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/ThiTextSize"/>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@mipmap/check_contact_sure"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="借款服务合同"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/SecTextSize"/>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:text="申请借款"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
